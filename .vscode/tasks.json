{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "backend: dev",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "uvicorn",
                "app.main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--reload"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "isBackground": true,
            "problemMatcher": {
                "owner": "python",
                "pattern": {
                    "regexp": "^(.*)$",
                    "message": 1
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*",
                    "endsPattern": "Application startup complete\\."
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "type": "npm",
            "script": "dev",
            "path": "frontend",
            "label": "npm: dev",
            "isBackground": true,
            "problemMatcher": {
                "owner": "typescript",
                "pattern": "$tsc",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": {
                        "regexp": "(.*?)"
                    },
                    "endsPattern": {
                        "regexp": "VITE v[0-9.]+\\s+ready in [0-9]+ ms"
                    }
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "frontend+backend: dev",
            "dependsOn": [
                "backend: dev",
                "npm: dev"
            ],
            "dependsOrder": "parallel"
        }
    ]
}
